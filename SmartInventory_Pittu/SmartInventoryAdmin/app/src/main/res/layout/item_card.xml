<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/itemIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_margin="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/itemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/itemIV"
                android:layout_toEndOf="@+id/itemIV"
                android:layout_margin="10dp"
                android:text="item" />

            <TextView
                android:id="@+id/itemPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemNameTV"
                android:layout_toEndOf="@+id/itemIV"
                android:layout_marginLeft="10dp"
                android:text="price" />

            <TextView
                android:id="@+id/numOfItemsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemPriceTV"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/itemIV"
                android:text="numOfItems" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>